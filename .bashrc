
# set vim as default editor
export VISUAL=vim
export EDITOR="$VISUAL"

# set key repeat speed
xset r rate 200 25

# Aliases ######################################################################
alias ..='cd ..'
alias reload='source ~/.bashrc'
alias o='xdg-open'
alias e.='xdg-open .'
alias bye='sudo shutdown -h now'

alias gis='git status'
alias gid='git diff'

alias cdm='cd ~/M'
alias cdwiki='cd ~/M/wiki'
